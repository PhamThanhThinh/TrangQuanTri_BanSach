@model TrangQuanTri_BanSach.Models.Domain.Author
@{
    ViewData["Title"] = "Add";
}

<div class="container pt-5">

  <div class="row">
    <div class="col-md-6">
      <h3>Trang thêm tên tác giả</h3>
      <form asp-action="Add" method="post">
        <div class="mb-3">
          <label asp-for="AuthorName">Tên của tác giả:</label>
          <input asp-for="AuthorName" type="text" class="form-control" />
          <span asp-validation-for="AuthorName" class="text-danger"></span>
        </div>

        @if (TempData["msg"] != null)
        {
          <div class="mb-3">
            @TempData["msg"]
          </div>
        }

        <div class="mb-3">
          <button type="submit" class="btn btn-success">Thêm</button>
          <a href="/Author/GetAll" class="btn btn-primary">Danh sách tác giả</a>
        </div>



      </form>
    </div>
  </div>
</div>