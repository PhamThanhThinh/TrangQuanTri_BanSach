@model TrangQuanTri_BanSach.Models.Domain.Book
@{
  ViewData["Title"] = "Add";
}

<div class="container pt-5">

  <div class="row">
    <div class="col-md-6">
      <h3>Trang thêm thông tin một cuốn sách</h3>
      <form asp-action="Add" method="post">
        <div class="mb-3">
          <label asp-for="Title">Tên của cuốn sách:</label>
          <input asp-for="Title" type="text" class="form-control" />
          <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
          <label asp-for="Isbn">Mã số quốc tế:</label>
          <input asp-for="Isbn" type="text" class="form-control" />
          <span asp-validation-for="Isbn" class="text-danger"></span>
        </div>

        <div class="mb-3">
          <label asp-for="TotalPages">Tổng số trang:</label>
          <input asp-for="TotalPages" type="number" class="form-control" />
          <span asp-validation-for="TotalPages" class="text-danger"></span>
        </div>

        <div class="mb-3">
          <label asp-for="AuthorId">Tác giả:</label>
          <select asp-for="AuthorId" asp-items="Model.AuthorList" class="form-control" >
            <option value="">--chọn tác giả--</option>
          </select>
          <span asp-validation-for="AuthorId" class="text-danger"></span>
        </div>

        <div class="mb-3">
          <label asp-for="PublisherId">Nhà xuất bản:</label>
          <select asp-for="PublisherId" asp-items="Model.PublisherList" class="form-control">
            <option value="">--chọn nhà xuất bản--</option>
          </select>
          <span asp-validation-for="PublisherId" class="text-danger"></span>
        </div>

        <div class="mb-3">
          <label asp-for="GenreId">Thể loại:</label>
          <select asp-for="GenreId" asp-items="Model.GenreList" class="form-control">
            <option value="">--chọn thể loại--</option>
          </select>
          <span asp-validation-for="GenreId" class="text-danger"></span>
        </div>

        @if (TempData["msg"] != null)
        {
          <div class="mb-3">
            @TempData["msg"]
          </div>
        }

        <div class="mb-3">
          <button type="submit" class="btn btn-success">Thêm</button>
          <a href="/Book/GetAll" class="btn btn-primary">Danh sách các cuốn sách</a>
        </div>



      </form>
    </div>
  </div>
</div>